<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--示波器-->
    <ImageView
        android:id="@+id/audio_player_iv_wave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/audio_aimi_wave" />

    <!--歌手名-->
    <TextView
        android:id="@+id/audio_player_tv_arties"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/audio_player_iv_wave"
        android:layout_centerHorizontal="true"
        android:text="歌手名"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <!--歌词-->
    <jing.graduation.zhplayer.lyrics.LyricsView
        android:id="@+id/audio_player_lyricview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/audio_player_iv_wave" />

</RelativeLayout>